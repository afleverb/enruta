doctype html
html
	head
		meta(charset='utf-8')
		title enruta 
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		meta(name='apple-mobile-web-app-capable', content='yes')
		meta(name='viewport', content='user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimal-ui')
		meta(name='apple-mobile-web-app-status-bar-style', content='yes')
		link(rel='stylesheet', href='css/app.min.css')
		link(rel='stylesheet', href='css/responsive.min.css')
		// inject:js
		script(src='js/app.min.js')
	body(ng-app='Enruta', ng-controller='MainController')
		// Sidebars
		.sidebar.sidebar-left(ng-include="'sidebar.html'", ui-track-as-search-param='true')
		.app
			// Navbars
			.navbar.navbar-app.navbar-absolute-top
				.navbar-brand.navbar-brand-center(ui-yield-to='title')
					| Mobile Angular UI
				.btn-group.pull-left
					.btn.sidebar-toggle(ui-toggle='uiSidebarLeft')
						i.fa.fa-bars
						|  Menu
				.btn-group.pull-right(ui-yield-to='navbarAction')
					.btn(ui-toggle='uiSidebarRight')
						i.fa.fa-comment
						|  Chat
			.navbar.navbar-app.navbar-absolute-bottom
				.btn-group.justified
					a.btn.btn-navbar(href='http://mobileangularui.com/')
						i.fa.fa-home.fa-navbar
						|  Docs
					a.btn.btn-navbar(href='https://github.com/mcasimir/mobile-angular-ui')
						i.fa.fa-github.fa-navbar
						|  Sources
					a.btn.btn-navbar(href='https://github.com/mcasimir/mobile-angular-ui/issues')
						i.fa.fa-exclamation-circle.fa-navbar
						|  Issues
			// App Body
			.app-body
				.app-content
					ng-view
		// ~ .app

		div(ui-yield-to='modals')
